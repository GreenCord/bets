<div class="main-wrapper">
  <!-- Main Header -->
  <div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
      <div class="container">
        <br><br>
         <div class="card white darken-1">
          <div class="card-content white-text">
            <h1 class="header center green-text text-darken-4">Welcome to BetParty</h1>
            <div class="row center grey-text">
              <p class="header col s12 light">Let's gamble irresponsibly.</p>
              <p>
                {{#if user}}
                Welcome, {{user.username}}!<br>
                <a href="/ballots" class="waves-effect waves-light btn">Browse Ballots and Bet!</a>
                {{else}}
                {{> auth/usernotauthenticated-block}}
                {{/if}}
              </p>
            </div>
          </div>
        </div>
        <br><br>
      </div><!--/.container-->
    </div><!--/.section-->
    <div class="parallax"><img src="/assets/img/benjamins.jpg" alt="All about those Benjamins."></div>
  </div>

  <!-- Main Section -->
  <div class="container">
    <div class="row">
      <h1 class="header center green-text text-darken-4">Create a New Bet</h1>
      <form>
        <p>Name</p>
        <input type="text" name="ballot-name" placeholder="Name of group/event">
        <!-- BET 1 -->
        <p>Bet 1</p>
        <!-- text -->
        <input type="text" name="bet-1-text" class="bet-text" placeholder="Enter true/false question for bet 1">

        <!-- BET 2 -->
        <p>Bet 2</p>
        <!-- text -->
        <input type="text" name="bet-2-text" class="bet-text" placeholder="Enter true/false question for bet 2">

        <!-- BET 3 -->
        <p>Bet 3</p>
        <!-- text -->
        <input type="text" name="bet-3-text" class="bet-text" placeholder="Enter true/false question for bet 3">

        <input class="btn-large" type="submit" value="Submit" id="submit-ballot">
      </form>
    </div>
    <div class="section">
      <div class="row">
        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center green-text"><i class="material-icons mat-icon">assignment_returned</i></h2>
            <h5 class="center">Choose a prop bet ballot.</h5>
            <p class="light">Login and select a ballot to bet on.</p>
          </div>
        </div>
        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center green-text"><i class="material-icons mat-icon">check_circle</i></h2>
            <h5 class="center">Place Your Bets</h5>
            <p class="light">Answer the questions on the ballot.</p>
