  <!-- Main Nav -->
  {{> master/nav-block}}
  
<div class="main-wrapper">
  <!-- Main Header -->
  
  {{!-- {{#if user}}
  {{> auth/userauthenticated-block}}
  {{else}}
  {{> auth/usernotauthenticated-block}}
  {{/if}} --}}
  

  <!-- Main Section -->
  <div class="container">

    <div class="row">
      <div class="col s12 m9">

        {{#if user}}
        <div class="row">
          <div class="col s12">
            <h2>Select a ballot below.</h2>
          </div>
        </div>
        <div class="row">
          {{#each ballots}}
            {{#unless expired}}
              {{> ballots/ballot-block}}
            {{/unless}}
          {{/each}}
        </div>
        {{else}}
      </div></div>
        <div class="row">
          <div class="col s12 center">
            <h2>Sorry, you must be logged in to view ballots.</h2>
            <p>{{> auth/usernotauthenticated-block}}</p>
          </div>
        </div>
        {{/if}}

        {{#if user}}
          <div class="row">
            <div class="col s12">
              <h2>Expired Ballots</h2>
            </div>
          </div>
          <div class="row">
          {{#each ballots}}
            {{#if expired}}
              {{> ballots/ballotexpired-block}}
            {{/if}}
          {{/each}}
          </div>
        {{/if}}

      </div>
      <div class="col s12 m3">
        {{#if user}}
        <div class="row">
          <div class="col s12">
            <h2>Your bets:</h2>
            <div class="row" id="userbets">
            </div>
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>

  <!-- Second Section -->
  {{#if user}}
  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <div class="col s12">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <h3 class="">Thank you for betting with BetParty!</h3>
              </div>
            </div>
          </div>
        </div>
      </div><!--/.container-->
    </div><!--/.section-->
    <div class="parallax"><img src="/assets/img/phat_stacks_of_cash.jpg" alt="MAKE IT RAIN."></div>
  </div>
  {{/if}}
</div>

