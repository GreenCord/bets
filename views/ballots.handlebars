  <!-- Main Nav -->
  {{> master/nav-block}}
  
<div class="main-wrapper">
  <!-- Main Header -->
  
  {{!-- {{#if user}}
  {{> auth/userauthenticated-block}}
  {{else}}
  {{> auth/usernotauthenticated-block}}
  {{/if}} --}}
  

  <!-- Main Section -->
  <div class="container">
    <div class="section">

      <div class="row">
        <div class="col s12">
          <h2>Select a ballot below.</h2>
        </div>
      </div>

      <div class="row">
        {{#if user}}
          {{#each ballots}}
            {{#unless expired}}
              {{> ballots/ballot-block}}
            {{/unless}}
          {{/each}}
        {{else}}
          {{> auth/usernotauthenticated-block}}
        {{/if}}

      </div>
    </div>
  </div>

  <!-- Second Section -->
  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <div class="col s12">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <h3 class="">Thank you for betting with BetParty!</h3>
              </div>
            </div>
          </div>
        </div>
      </div><!--/.container-->
    </div><!--/.section-->
    <div class="parallax"><img src="./assets/img/phat_stacks_of_cash.jpg" alt="MAKE IT RAIN."></div>
  </div>
</div>
  <!-- Footer -->
  <footer class="page-footer red">
    <div class="container">
      <div class="row">
        <div class="col m9 s12">
          <h5 class="white-text">About BetParty</h5>
          <p class="grey-text text-lighten-4">It's awesome.</p>
        </div>
        <div class="col m3 s12">
          <h5 class="white-text">View Code on GitHub</h5>
          <ul>
            <li><a class="grey-text text-lighten-4" href="https://github.com/greencord/bets" alt="Link to GitHub repository"><i class="material-icons right">laptop</i> GitHub Repo</a></li>
          </ul>
        </div>
      </div>
    </div>

  </footer>

