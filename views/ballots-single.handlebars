<!-- Main Nav -->
  {{> master/nav-block}}
  
<div class="main-wrapper">

  

  <!-- Main Section -->
  <div class="container">
    <div class="section">

      

      {{#if user}}
      <div class="row">
        <div class="col s12">
          <h2 id="ballotName" data-id="{{ballots.id}}">Ballot: {{ballots.name}}</h2>
        </div>
      </div>
      <form name="ballot" id="ballot">
        <div class="row center">
          <div class="col s4 ballot-card">
            <div class="card-panel green lighten-5 green-text">
              <div>{{ballots.bet_text_1}}</div>
              <div>
                <input name="ballot_group1" type="radio" id="bet_1_t" value="1" />
                <label for="bet_1_t">True</label>
              </div>
              <div>
                <input name="ballot_group1" type="radio" id="bet_1_f" value="0" />
                <label for="bet_1_f">False</label>
              </div>
            </div>
          </div>
          <div class="col s4 ballot-card">
            <div class="card-panel green lighten-5 green-text">
              <div>{{ballots.bet_text_2}}</div>
              <div>
                <input name="ballot_group2" type="radio" id="bet_2_t" value="1" />
                <label for="bet_2_t">True</label>
              </div>
              <div>
                <input name="ballot_group2" type="radio" id="bet_2_f" value="0" />
                <label for="bet_2_f">False</label>
              </div>
            </div>
          </div>
          <div class="col s4 ballot-card">
            <div class="card-panel green lighten-5 green-text">
              <div>{{ballots.bet_text_3}}</div>
              <div>
                <input name="ballot_group3" type="radio" id="bet_3_t" value="1" />
                <label for="bet_3_t">True</label>
              </div>
              <div>
                <input name="ballot_group3" type="radio" id="bet_3_f" value="0" />
                <label for="bet_3_f">False</label>
              </div>
            </div>
          </div>
        </div>
        <div class="row center">
          <div class="col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action" id="submit-ballot">
              Submit
              <i class="material-icons left"></i>
            </button>
          </div>
        </div>
      </form>
      {{else}}
      <div class="row">
        <div class="col s12 center">
          <h2>Sorry, you must be logged in.</h2>
          <p>{{> auth/usernotauthenticated-block}}<p>
        </div>
      </div>
      {{/if}}

  
    </div>
  </div>

  <!-- Second Section -->
  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <div class="row center">
          <div class="col s12">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <h3 class="">Thank you for betting with BetParty!</h3>
              </div>
            </div>
          </div>
        </div>
      </div><!--/.container-->
    </div><!--/.section-->
    <div class="parallax"><img src="/assets/img/phat_stacks_of_cash.jpg" alt="MAKE IT RAIN."></div>
  </div>
</div>

{{> master/footer-block}}
{{> master/scripts-block}}
  